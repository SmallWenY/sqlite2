<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:background="@mipmap/dis_bg"
    tools:context=".Main.AboutFragment">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primary_light">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="7dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于我们"
            android:textColor="@color/grey_dark"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ExtraText"
        android:layout_below="@+id/title_bar" >

        <TextView
            android:id="@+id/id_update"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#b3c4c4c4"
            android:clickable="true"
            android:drawableLeft="@mipmap/m_about_icon_refresh"
            android:drawablePadding="9.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/content_padding"
            android:text="检测更新"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/id_makeProposal"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:clickable="true"
            android:background="#b3c4c4c4"
            android:layout_below="@id/id_update"
            android:layout_marginTop="@dimen/content_margin"
            android:drawableLeft="@mipmap/m_about_icon_proposal"
            android:drawablePadding="9.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/content_padding"
            android:text="提建议"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/id_shareTofriends"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:clickable="true"
            android:background="#b3c4c4c4"
            android:layout_below="@id/id_makeProposal"
            android:layout_marginTop="5.0dip"
            android:drawableLeft="@mipmap/m_about_icon_share"
            android:drawablePadding="9.0dip"
            android:gravity="center_vertical"
            android:padding="@dimen/content_padding"
            android:text="分享给朋友"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/id_welcome"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:clickable="true"
            android:background="#b3c4c4c4"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_shareTofriends"
            android:layout_marginTop="@dimen/content_margin"
            android:drawableLeft="@mipmap/m_about_icon_welcome"
            android:drawablePadding="9.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/content_padding"
            android:text="欢迎页"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/agreement"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:clickable="true"
            android:background="#b3c4c4c4"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/id_welcome"
            android:layout_marginTop="@dimen/content_margin"
            android:drawableLeft="@mipmap/xieyi"
            android:drawablePadding="9.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/content_padding"
            android:text="使用条款和建议"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/id_offical_phone"
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:clickable="true"
            android:background="#b3c4c4c4"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/agreement"
            android:layout_marginTop="@dimen/content_margin"
            android:drawableLeft="@mipmap/m_about_icon_phone"
            android:drawablePadding="9.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/content_padding"
            android:text="客服电话: 233"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/id_about_firm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="南京航空航天大学科创小分队\n@2018NUAA"
            android:soundEffectsEnabled="false"
            android:textColor="@color/gray_txt" />

    </RelativeLayout>

</RelativeLayout>