<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_login_div_bg"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_regist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="个人资料修改"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/change_nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_regist_title"
            android:layout_marginTop="10dp"
            android:text="昵称"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/change_nickname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/change_nickname_text"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_style"
            android:inputType="text"
            android:singleLine="true" />

        <TextView
            android:id="@+id/change_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_nickname_edit"
            android:layout_marginTop="10dp"
            android:text="密码"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/change_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/change_password_text"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_style"
            android:inputType="textPassword"
            android:singleLine="true" />

        <TextView
            android:id="@+id/change_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_password_edit"
            android:layout_marginTop="10dp"
            android:text="手机号"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/change_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/change_phone_text"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_style"
            android:singleLine="true" />

        <TextView
            android:id="@+id/change_mail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_phone_edit"
            android:layout_marginTop="10dp"
            android:text="邮箱"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/change_mail_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/change_mail_text"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_style"
            android:singleLine="true" />

        <TextView
            android:id="@+id/change_sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_mail_edit"
            android:layout_marginTop="10dp"
            android:text="性别"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/change_sex_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/change_sex_text"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_style"
            android:singleLine="true" />

        <TextView
            android:id="@+id/change_age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_sex_edit"
            android:layout_marginTop="10dp"
            android:text="年龄"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/change_age_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/change_age_text"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_style"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/img_regist_back"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/change_age_edit"
            android:layout_marginTop="20dp"
            android:src="@mipmap/backlogin"/>

        <TextView
            android:id="@+id/back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/change_age_edit"
            android:layout_toRightOf="@+id/img_regist_back"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="返回"/>

        <TextView
            android:id="@+id/confirm"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/change_age_edit"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="确认" />
    </RelativeLayout>

</LinearLayout>