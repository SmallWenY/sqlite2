<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    android:background="@mipmap/dis_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/primary_light" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:paddingLeft="7dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的主页"
            android:textColor="@color/grey_dark"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/title_bar" />

    <RelativeLayout
        android:id="@+id/infoRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/line1"
        android:background="#b3c4c4c4"
        android:clickable="true"
        android:onClick="onClick" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:src="@mipmap/profile3" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/iv_head"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="#CCCCCC"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/iv_head"
            android:paddingLeft="10dp"
            android:text="查看个人主页"
            android:textColor="@color/grey_dark"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/infoRelativeLayout" />

    <RelativeLayout
        android:id="@+id/myPush"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line2"
        android:background="#b3c4c4c4"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="我的发帖"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/myPush" />

    <RelativeLayout
        android:id="@+id/myFollow"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line3"
        android:background="#b3c4c4c4"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="我的关注"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/myFollow" />

    <RelativeLayout
        android:id="@+id/myTucao"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line4"
        android:background="#b3c4c4c4"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="我要吐槽"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

    <View
        android:id="@+id/line5"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_below="@+id/myTucao" />

    <RelativeLayout
        android:id="@+id/aboutUs"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/line5"
        android:background="#b3c4c4c4"
        android:clickable="true"
        android:onClick="onClick" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="关于我们"
            android:textColor="#4A4A4A"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="20dp"
            android:text="〉"
            android:textColor="#CCCCCC" />
    </RelativeLayout>

</RelativeLayout>